<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiuye.dao.UserFavoriteBookDao">

	<select id="findAll" resultType="com.xiuye.orm.UserFavoriteBook">
	    
	    select * from userfavoritebook
	    
	</select>

	<select id="findUserFavoriteBooksByUserid" parameterType="string" resultType="com.xiuye.orm.UserFavoriteBook">
		select * from userfavoritebook where userid = #{userid} 
		order by addDate,readtimes desc
	</select>

	<delete id="deleteUserFavoriteBookByUseridAndBookid" parameterType="string">
		delete from userfavoritebook where userid=#{0} and bookid=#{1}
	</delete>

</mapper>
